/* 整体排列 */
.post-container{
    flex-direction:column;
    display:flex;
    margin-top:20rpx;
    margin-bottom:40rpx;
    margin-left: 0rpx;
    background-color:#fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
}
/* 日期 */
.post-author-date{
    margin-top:10rpx;/*顶部边距*/
    margin-bottom: 20rpx;/*底部边距*/
    margin-left: 10px;
}
/* 用户 */
.post-author{
    width:60rpx;
    height:60rpx;
    vertical-align: middle;
}
/* 发布日期 */
.post-date{
    margin-left: 20px;
    vertical-align: middle;
}
/* 文章导图样式 */
.post-image{
    width:100%;
    height:340rpx;
    margin:auto 0;
    margin-bottom: 15px;
}

.post-date{
    font-size:26rpx;
    margin-bottom: 10px;
}
/* 标题字体 */
.post-title{
    font-size:34rpx;
    font-weight: 600;
    color:#333;
    margin-bottom: 10px;
    margin-left: 10px;/*用px保持元素之间垂直距离不变*/
}
/* 文章内容 */
.post-content{
    color:#666;
    font-size:28rpx;/*字体大小*/
    margin-bottom:20rpx;
    margin-left: 20rpx;
    letter-spacing:2rpx; /*文本间距*/
    line-height: 40rpx;/*行高*/
}
.post-like{
    font-size:13px;
    line-height: 16px;
    margin-left: 10px;
}

.post-like-image{
    height:16px;
    width:16px;
    margin-right: 8px;
    vertical-align:middle;/*垂直居中*/
}

.post-like-font{
    vertical-align:middle;
    margin-right: 20px;
}
